# -*- mode: snippet -*-
# name: sub-tree query
# key: subtreequery
# --
// 頂点iを根とする部分木に対して区間木等でクエリを投げたいときはquery(A[i],B[i])に対して操作する。
vec<int> A(N); // 頂点iの行きがけ順序がA[i]
vec<int> B(N); // 頂点iの子孫の行きがけ順序は全てB[i]未満
void subtreequery(int curr, int prev, int& k)
{
  A[curr] = k;
  ++k;
  each (next, g[curr]) {
    if (next == prev) continue;
    subtreequery(next, curr, k);
  }
  B[curr] = k;
  return ;
}
